<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="com.everestadvanced.chargingchecker.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:visibility="gone"
        android:id="@+id/gifimagecharge"
        android:layout_gravity="right"
        android:layout_marginTop="-15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/charging"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Show battery charging-->
        <TextView
            android:id="@+id/charging"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--chargin in percentage showing-->
        <Spinner
            android:id="@+id/parcentCahrging"
            android:spinnerMode="dialog"
            android:prompt="@string/spinnertilte"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

        <!--set alarm level button-->
        <Button
            android:id="@+id/setelvel"
            android:text="Set Level"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <!--set alarm button-->
        <Button
            android:id="@+id/setalarms"
            android:text="Set Alarm"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <!--Stop alarm button-->
        <Button
            android:id="@+id/stopalarms"
            android:text="Stop Alarm"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>
